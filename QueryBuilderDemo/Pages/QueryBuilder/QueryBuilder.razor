<h3>QueryBuilder</h3>

<Head @ref=Head Operations=Operations Fields=Fields>
</Head>

@code {
    [Parameter]
    public Dictionary<string, string> Fields { get; set; } = default!;
    [Parameter]
    public Dictionary<string, Dictionary<string, int>> Operations { get; set; } = default!;

    private Head Head = default!;

    protected override void OnParametersSet()
    {
        if (Operations == null)
        {
            Operations = DefaultOperations.Operations;
        }
    }

    public QueryBuilderBase GetData()
    {
        var headModel = new HeadModel()
            {
                Condition = Head.Condition,
                FormModel = Head.GetData()
            };
        return headModel;
    }
}
